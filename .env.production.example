# ─────────────────────────────────────────────────────────────────────────────
# AI Novel Factory — Production Environment
# Copy this file to .env.production and fill in ALL values.
# ⚠️  Never commit .env.production to version control.
# ─────────────────────────────────────────────────────────────────────────────

DJANGO_SETTINGS_MODULE=config.settings_production

# Django — REQUIRED (no defaults in production settings)
DJANGO_SECRET_KEY=<generate-with: python -c "import secrets; print(secrets.token_urlsafe(64))">
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=ai-novel-factory.com,www.ai-novel-factory.com

# Database
DATABASE_URL=postgresql://novel_user:<password>@db:5432/ai_novel_factory
POSTGRES_DB=ai_novel_factory
POSTGRES_USER=novel_user
POSTGRES_PASSWORD=<strong-password>

# Redis
CELERY_BROKER_URL=redis://:<redis-password>@redis:6379/0
CELERY_RESULT_BACKEND=redis://:<redis-password>@redis:6379/0
REDIS_URL=redis://:<redis-password>@redis:6379/0

# Ports
DJANGO_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555

# Flower auth — protect with strong credentials
FLOWER_USER=<admin-user>
FLOWER_PASSWORD=<strong-flower-password>

# Frontend
NEXT_PUBLIC_API_URL=https://ai-novel-factory.com/api
# Media host (Django media files served from this hostname)
NEXT_PUBLIC_MEDIA_HOST=ai-novel-factory.com

# CORS
CORS_ALLOWED_ORIGINS=https://ai-novel-factory.com,https://www.ai-novel-factory.com

# Error tracking
SENTRY_DSN=https://<key>@o<org>.ingest.sentry.io/<project>
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.05
GIT_SHA=

# AI Provider
LLM_PROVIDER=gemini
GEMINI_API_KEY=<your-gemini-api-key>
GEMINI_MODEL=gemini-2.0-flash

# Ollama (if using local GPU server)
OLLAMA_BASE_URL=http://<gpu-server>:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=300

# Stripe — live keys
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_live_...

# Email (SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=<sendgrid-api-key>
DEFAULT_FROM_EMAIL=noreply@ai-novel-factory.com
SERVER_EMAIL=devops@ai-novel-factory.com

# Amazon KDP / Ads
AMAZON_ADVERTISING_CLIENT_ID=
AMAZON_ADVERTISING_CLIENT_SECRET=
AMAZON_ADVERTISING_REFRESH_TOKEN=

# DataForSEO
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# Copyscape
COPYSCAPE_API_USERNAME=
COPYSCAPE_API_KEY=

# Originality.ai
ORIGINALITY_API_KEY=

# Backup
BACKUP_DIR=/app/backups
BACKUP_RETAIN_DAYS=30

# Static / Media
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
